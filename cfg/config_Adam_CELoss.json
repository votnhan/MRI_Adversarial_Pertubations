{
  "name": "Brain_Tumor_Segmentation_2D",
  "n_gpu": 1,
  "model": {
    "type": "UNet",
    "args": {
      "n_channels": 4,
      "n_classes": 4
    }
  },
  "transforms": {
    "joint_transforms": {
      "crop_size": 224,
      "range_scale": [0.8, 1.2]
    },
    "image_transforms": {
      "means": [1002.8655, 754.4905, 185.99873, 260.69287],
      "stds": [1173.731, 882.37555, 228.1578, 323.1486]
    }
  },
  "train_data_loader": {
    "type": "AxialMRIDataLoader",
    "args": {
      "root": "data/",
      "batch_size": 32,
      "shuffle": true,
      "num_workers": 0,
      "split": "train",
      "num_samples": -1
    }
  },
  "val_data_loader": {
    "type": "AxialMRIDataLoader",
    "args": {
      "root": "data/",
      "batch_size": 8,
      "shuffle": true,
      "num_workers": 0,
      "split": "val",
      "num_samples": 50
    }
  },
  "dice_loss": {
    "type": "CrossEntropyLoss2d",
    "args": {
      "frequency": [0.9873051535723489, 0.0019667051872610916,
                    0.007691321189279732, 0.0030368200511102523]
    }
  },
  "metrics": ["dice_whole_tumor", "dice_tumor_core", "dice_enhancing_tumor"],
  "trainer": {
    "name": "SegmentationTrainer",
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_supervised_loss",
    "early_stop": 10,
    "accumulation_steps": 1,
    "log_step": 5,
    "do_validation": true,
    "do_validation_interval": 1,
    "tensorboard": true,
    "save_for_track": null
  },
  "optimizer":{
    "type": "Adam",
    "args": {
      "lr": 0.001
    }
  },
  "lr_scheduler": {
      "type": "MyReduceLROnPlateau",
      "args": {
          "mode": "min",
          "threshold": 0.01,
          "factor": 0.5,
          "patience": 0,
          "verbose": true,
          "min_lr": 1e-05,
          "threshold_mode": "rel"
      }
  }
}